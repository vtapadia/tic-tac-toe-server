{
  "compilerOptions": {
    "allowJs": true,
    "lib": [ "es5", "es6" ],
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}